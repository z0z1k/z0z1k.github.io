function SupportCreate() {
	var apiname = $("#supportCreate")["val"]();
	var text = $("#text")["val"]();
	var image = $("#image")["val"]();
	$.ajax({
		type: "POST",
		url: "/system/function.php",
		data: {
			apiname: apiname,
			text: text,
			image: image
		},
		success: function(html) {
			$("#result").empty();
			$("#result").append(html);
		}
	})
}
