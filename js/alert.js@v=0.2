function BuyPlace(dataAndEvents, GameID) {
	swal({
		title: "Подтвердите",
		text: "Вы действительно хотите занять ячейку " + dataAndEvents + " ?",
		type: "warning",
		showCancelButton: true,
		confirmButtonColor: "#8CD4F5",
		confirmButtonText: "Да, занять!",
		cancelButtonText: "Нет",
		closeOnConfirm: false,
		closeOnCancel: true
	},
	function(){
		var apiname = $("#Place_activity")["val"]();
		$.ajax({
			type: "POST",
			url: "/system/function.php",
			data: {
				apiname: apiname,
				gameid: +GameID,
				place: +dataAndEvents
			},
			success: function(html) {
				$("#place_" + dataAndEvents).empty();
				$("#place_" + dataAndEvents).append(html);
			}
		})
	});
}